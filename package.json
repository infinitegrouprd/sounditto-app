{
  "name": "SoundittoApp",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "lint": "tslint --project tsconfig.json",
    "test": "jest",
    "ios": "react-native run-ios --simulator \"iPhone 7\"",
    "android": "cd ./android && ./gradlew app:assembleDebug && ./gradlew installDebug",
    "android:release": "react-native run-android --variant=release",
    "generateApk": "cd ./android && ./gradlew clean && ./gradlew assembleRelease",
    "build:ios": "react-native bundle --entry-file index.js --platform ios --dev false --bundle-output ./ios/SoundittoApp/main.jsbundle",
    "build:android": "react-native bundle --entry-file index.js --platform android --dev false --bundle-output ./android/app/src/main/assets/index.android.bundle --assets-dest ./android/app/src/main/res/"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "formik": "^1.5.8",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "native-base": "^2.13.5",
    "react": "16.6.3",
    "react-native": "^0.58.5",
    "react-native-navigation": "^2.27.1",
    "react-native-sentry": "^0.42.0",
    "react-redux": "^6.0.1",
    "redux": "^4.0.4",
    "redux-logger": "^3.0.6",
    "reselect": "^4.0.0",
    "styled-components": "^4.3.2",
    "yup": "^0.27.0"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/runtime": "^7.5.5",
    "@strv/stylelint-config-styled-components": "^1.1.0",
    "@types/jest": "^24.0.18",
    "@types/lodash": "^4.14.137",
    "@types/react-native": "^0.57.60",
    "@types/react-native-dotenv": "^0.2.0",
    "@types/react-redux": "^7.1.2",
    "@types/react-test-renderer": "^16.9.0",
    "@types/redux-logger": "^3.0.7",
    "@types/styled-components": "^4.1.18",
    "@types/yup": "^0.26.23",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "24.9.0",
    "jest": "24.9.0",
    "metro-react-native-babel-preset": "0.52.0",
    "prettier": "^1.18.2",
    "react-dom": "^16.9.0",
    "react-native-dotenv": "^0.2.0",
    "react-native-typescript-transformer": "^1.2.13",
    "react-test-renderer": "^16.9.0",
    "stylelint": "^10.1.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.19.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-react": "^4.0.0",
    "typescript": "^3.5.3"
  },
  "jest": {
    "preset": "react-native",
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/react-native/jest/preprocessor.js",
      "\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.jest.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "setupFiles": [
      "./__tests__/setup.js"
    ]
  }
}
